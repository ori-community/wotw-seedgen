#category("Quality of Life")
#name("Better Stomp")
#description("Improvements to Hammer stomps")

!config(stomp_through_portals, "Preserve velocity when stomping through portals", Boolean, true)
!config(stomp_into_water, "Preserve velocity when stomping into water", Boolean, true)

!if stomp_through_portals == true {
    on spawn store(randoConfig.stompThroughPortals, true)
}

!if stomp_into_water == true {
    on spawn store(randoConfig.stompIntoWater, true)
}
